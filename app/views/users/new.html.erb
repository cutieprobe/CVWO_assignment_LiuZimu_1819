<% provide(:title, 'Sign up') %>

<%= render "layouts/back" %>

<h1>Sign up</h1>
<div class="row" style="font-size:1.4em;">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
	<div>
	<ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
	</div>
      <% end %>
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: "(No longer than 16 characters)" %>

      <%= f.label :email %>
      <%= f.email_field :email, placeholder: "Enter your email" %>

      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "(6 to 24 characters)" %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation, placeholder: "Enter your password again."  %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
