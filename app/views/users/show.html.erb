<h3>
<%= link_to "All Tags", tags_path %>
</h3>
</div>

<h1>
<%= @user.name %>
</h1>

<h4 align="center">
All Tasks
</h4>

<%= form_tag(user_tasks_path(@user), :method => 'get', id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Tags" %>
<%= submit_tag "Search" %>
<% end %>

<h2>
<ul class="tasks">
  <% @user.tasks.each do |task| %>
    <li>
      <%= link_to task.title, user_task_path(@user, task) %>
      <%= task.deadline %>
      <%= link_to "update", edit_user_task_path(@user, task) %>
      <%= link_to "delete", user_task_path(@user, task), method: :delete, data:{ confirm: 'Are you sure?' }  %>
    </li>
  <% end %>
</ul>
