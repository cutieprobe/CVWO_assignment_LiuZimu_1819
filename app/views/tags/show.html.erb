<% provide(:title, " #{current_user.name} tag: #{@tag.name}") %>
<h1><%= @tag.name %></h1>

<h3>
<table class="table table-striped table-hover" style="width: 50%; margin: auto;">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Deadline</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <%= render task %>
    </tr>
  <% end %>
  </tbody>
</table>
</h3>

<div class="center" style="font-size:1.5em;">
<%= link_to "Back", tags_path, class:"btn btn-primary" %>
</div>
