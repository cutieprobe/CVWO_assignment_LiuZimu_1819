<% provide(:title, " #{@user.name} Tag Search") %>

<h3 style="font-weight:bold;text-align:center;font-size:2.5em;">
Search by Tags
</h3>

<% if @tasks.blank? %>
<h3 style="color:grey;text-align:center;font-size:2.5em;">No task found.</h3>
<% else %>

<h3>
<table class="table table-striped table-hover" style="width: 50%; margin: auto;">
  <thead>
    <tr>
      <th></th>
      <th scope="col">Title</th>
      <th scope="col">Deadline</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
  <% @tasks.each do |task| %>
    <tr>     
     <% if !task.completed %>
     <th scope="row" class="btn", style="font-size:1em;">
<%= link_to '', user_task_complete_path(current_user, task), method: :patch, class:" glyphicon glyphicon-ok" %>
      </th>
    <% else %>
      <th scope="row" class="btn", style="font-size:1em;">
<%= link_to '', user_task_undocomplete_path(current_user, task), method: :patch, class:" glyphicon glyphicon-remove" %>
      </th>
    <% end %>

      <td><%= link_to task.title, user_task_path(current_user, task) %></td>
      <td><%= task.deadline %></td>
      <td>
        <%= link_to "Update", edit_user_task_path(current_user, task) %>
	<%= link_to "Delete", user_task_path(current_user, task), method: :delete, data:{ confirm:  'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
</h3>
<% end %>
<h3 align="center">
<%= link_to "Back", "javascript:history.back()" %>
</h3>


